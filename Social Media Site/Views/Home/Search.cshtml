@model List<UserProfile>

<form class="d-flex" method="post" asp-controller="Home" asp-action="Search">
    <input name="key" class="form-control me-sm-2" type="search" placeholder="Search">
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
</form>

@{
    if (Model.Count == 0)
    {
        <h2>No results found</h2>
    }
    else
    {
        <h2>Search Results</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Likes
                    </th>
                    <th>
                        Dislikes
                    </th>
                    <th>
                        Image
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Profile/@item.UserId">@item.Name</a>
                        </td>
                        <td>
                            @item.Age
                        </td>
                        <td>
                            @item.Likes
                        </td>
                        <td>
                            @item.Dislikes
                        </td>
                        <td>
                            <img class="img-search" src="@item.Image" alt="Image"/>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}